<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ghmxr.apkextractor"
    android:versionCode="3"
    android:versionName="Build 3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_apkext"
        android:label="@string/app_iconname"
        android:theme="@style/AppTheme"
        android:name="com.github.ghmxr.apkextractor.ui.Overflow" >
        <activity
            android:name="com.github.ghmxr.apkextractor.activities.Main"
            android:label="@string/app_iconname"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
        <activity
            android:name="com.github.ghmxr.apkextractor.activities.FolderSelector"            
            android:screenOrientation="portrait" >            
        </activity>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.github.ghmxr.apkextractor.FileProvider"
            android:grantUriPermissions="true"
            android:exported="false" >
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths" />
        </provider>               
        
    </application>
    
    

</manifest>
