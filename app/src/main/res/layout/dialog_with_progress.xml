<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/dialog_att"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="13sp"
        android:layout_margin="15dp"
        tools:text="提示"/>
    <ProgressBar
        android:id="@+id/dialog_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_att"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="?android:attr/progressBarStyleHorizontal"/>
    <TextView
        android:id="@+id/dialog_att_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_progress_bar"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:textSize="12sp"
        tools:text="199KB/s"/>
    <TextView
        android:id="@+id/dialog_att_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_progress_bar"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:textSize="12sp"
        tools:text="12MB/100MB(12%)"/>
</RelativeLayout>