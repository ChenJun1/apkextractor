<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout 
        android:id="@+id/extract_multi_wait"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ProgressBar 
        android:id="@+id/extract_multi_pb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/extract_multi_pb"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/activity_main_wait"/>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/extract_multi_selections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:visibility="gone">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/dialog_extract_multi_has_data_obb"/>
        <CheckBox 
            android:id="@+id/extract_multi_data_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Data"/>
        <CheckBox 
            android:id="@+id/extract_multi_obb_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Obb"/>
    </LinearLayout>
    

</RelativeLayout>
